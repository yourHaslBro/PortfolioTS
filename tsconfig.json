{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./",
    "paths": {
      "@c/*": ["Components/*"]
    }
  },
  "include": [
    "Components/**/*",
    "Components/*",
    "app/*",
    "app/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
